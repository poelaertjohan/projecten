@model IEnumerable<BreakOutBox.Models.Groep>

<h1>Selecteer jouw groep</h1>
<hr />

<section>
    <div class="container">
        @ViewBag.SuccesMessage
        <div class="row">

            @foreach (var item in Model)
       
            {

            <div class="col-md-3 col-sm-6 " style="border: 1px solid gray; border-radius: 5px ;margin: 20px; height: 200px;">
                    <div class="card-body">
                        <h4 class="card-title">Groep @item.Id</h4>
                        <hr>
                        <p class="card-text">@item.Leerlingen</p>
                        <a asp-action="StartOefeningen" asp-controller="Sessie" asp-route-id=@item.Id method="get" class="btn btn-primary" style="position: absolute; bottom: 0;margin-bottom : 10px">Start de oefeningen</a>
                        <!-- <a asp-action="Index" asp-controller="Oefening" method="get" class="btn btn-primary" style="margin-bottom : 10px">start Sessie</a>  -->
                    </div>
            </div>
            }
            
        </div>
    </div>
</section>


