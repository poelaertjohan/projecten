@model IEnumerable<BreakOutBox.Models.Vooruitgang>

<h1>Vooruitgangen</h1>
<hr />

<section>
    <div class="container">
        <div class="row">
            <a asp-action="Refresh" asp-controller="Beheer" method="get" class="btn btn-primary" style="margin-bottom : 10px">Refresh</a>

            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 card" style="border: 1px solid gray; border-radius: 2px ;margin: 20px; height: 200px;">
                    <div class="card-body">
                        <h4 class="card-title">Groep @item.GroepID</h4>
                        <hr>
                        <p class="card-text">Aantal opgeloste oefeningen: @item.Score van de @TempData["aantalOefeningen"]</p>
                        @{
                            if (item.IsFrozen == 0)
                            {
                                <p class="card-text">Status: niet bevroren</p>

                            }
                            else
                            {
                                <p class="card-text">Status: bevroren</p>

                            }
                        }
                        <form asp-action="GroepsOverzicht" asp-controller="Beheer" asp-route-id=@item.GroepID method="post">
                            <button class="btn btn-primary">Bevries/ Ontvries</button>
                        </form>
                    </div>

                </div>
            }
        </div>
    </div>
</section>


